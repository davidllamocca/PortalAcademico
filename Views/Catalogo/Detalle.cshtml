@using PortalAcademico.Data
@model Curso

@{
    ViewData["Title"] = $"Detalle - {Model.Nombre}";
    var usados = (int)(ViewBag.Usados ?? 0);
    var disponibles = Math.Max(Model.CupoMaximo - usados, 0);
}

<div class="container py-4">
    <h1 class="mb-3">@Model.Nombre</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <div asp-validation-summary="All"></div>
        </div>
    }

    <div class="row g-4">
        <div class="col-md-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Código</dt>
                        <dd class="col-sm-8">@Model.Codigo</dd>

                        <dt class="col-sm-4">Créditos</dt>
                        <dd class="col-sm-8">@Model.Creditos</dd>

                        <dt class="col-sm-4">Horario</dt>
                        <dd class="col-sm-8">
                            @Model.HorarioInicio.ToString("HH\\:mm") - @Model.HorarioFin.ToString("HH\\:mm")
                        </dd>

                        <dt class="col-sm-4">Cupo máx.</dt>
                        <dd class="col-sm-8">@Model.CupoMaximo</dd>

                        <dt class="col-sm-4">Inscritos</dt>
                        <dd class="col-sm-8">@usados</dd>

                        <dt class="col-sm-4">Disponibles</dt>
                        <dd class="col-sm-8">@disponibles</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@(Model.Activo ? "Activo" : "Inactivo")</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="mb-3">Inscripción</h5>

                    @* Anidamos los if para evitar errores de Razor *@
                    @if (!Model.Activo)
                    {
                        <div class="alert alert-warning mb-0">Este curso está inactivo actualmente.</div>
                    }
                    else
                    {
                        if (disponibles <= 0)
                        {
                            <div class="alert alert-warning mb-0">No hay vacantes disponibles.</div>
                        }
                        else
                        {
                            if (User?.Identity?.IsAuthenticated ?? false)
                            {
                                <form asp-action="Inscribirse" asp-controller="Catalogo" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@Model.Id" />
                                    <button type="submit" class="btn btn-primary">Inscribirme</button>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary">
                                    Inicia sesión para inscribirte
                                </a>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-link">← Volver al catálogo</a>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
